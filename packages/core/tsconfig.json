{
    "compilerOptions": {
        "target": "es2020",
	"module": "es2020",
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist",
    	"skipLibCheck": true,
    	"allowUnusedLabels": true,
	"moduleResolution": "node",
	"allowSyntheticDefaultImports": true,
    	"module": "commonjs",
    	"esModuleInterop": true,
    	"strict": false,
    	"baseUrl": "./src",
    	"paths": {
      		"@solana/spl-token": ["../node_modules/@solana/spl-token"]
    	}
    },
    "include": ["./src/**/*"],
    "quoteStyle": "single"
}
