{
    "compilerOptions": {
        "target": "es2020",
	"module": "es2020",
    	"skipLibCheck": true,
    	"allowUnusedLabels": true,
	"moduleResolution": "node",
	"allowSyntheticDefaultImports": true,
    	"module": "commonjs",
    	"esModuleInterop": true,
    	"strict": false,
    	"baseUrl": "./src",
    	"paths": {
      		"@solana/spl-token": ["../node_modules/@solana/spl-token"]
    	}
    },
    "include": ["./src/**/*"],
    "quoteStyle": "single"
}
